{
  "name": "remedypro",
  "version": "2.0.2",
  "description": "Unofficial Discord overlay support for MacOS",
  "main": "src/main.js",
  "scripts": {
    "pack": "electron-builder --mac",
    "pack:win": "electron-builder --win"
  },
  "build": {
    "productName": "Remedy Pro",
    "mac": {
      "icon": "./src/icon/favicon.png",
      "asar": true,
      "extendInfo": {
        "LSUIElement": 1
      },
      "target": {
        "arch": [
          "universal"
        ],
        "target": "dmg"
      }
    },
    "win": {
      "icon": "./src/icon/favicon.png",
      "asar": true,
      "target": [
        "portable"
      ]
    },
    "files": [
      "!Pro.md",
      "!README.md",
      "!Standard.md",
      "!src/img"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "discord.js-selfbot-v13": "^2.13.6",
    "electron-json-storage": "^4.5.0",
    "electron-preferences": "^2.6.0",
    "puppeteer-core": "^13.5.1",
    "puppeteer-in-electron": "^3.0.5",
    "swup": "^2.0.19"
  },
  "devDependencies": {
    "electron": "^23.1.1",
    "electron-builder": "^23.6.0",
    "modclean": "^3.0.0-beta.1",
    "standard": "^16.0.4"
  }
}
